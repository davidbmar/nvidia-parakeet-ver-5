# Production RNN-T Deployment Configuration Template
# Copy to .env and fill in your actual values

# =============================================================================
# AWS Configuration (REQUIRED)
# =============================================================================
AWS_REGION="us-east-2"
AWS_ACCOUNT_ID="YOUR_AWS_ACCOUNT_ID_HERE"

# S3 Configuration for audio file storage
AUDIO_BUCKET="your-audio-bucket-name"

# =============================================================================
# GPU Instance Configuration
# =============================================================================
# EC2 instance details (will be populated by deployment scripts)
GPU_INSTANCE_TYPE="g4dn.xlarge"
GPU_INSTANCE_ID=""
GPU_INSTANCE_IP=""
INSTANCE_NAME="rnnt-gpu"
KEY_NAME="rnnt-production-key"

# =============================================================================
# RNN-T Server Configuration
# =============================================================================
# Server settings
RNNT_SERVER_PORT="8000"
RNNT_SERVER_HOST="0.0.0.0"

# Model configuration
RNNT_MODEL_SOURCE="speechbrain/asr-conformer-transformerlm-librispeech"
RNNT_MODEL_CACHE_DIR="/opt/rnnt/models"

# Performance settings
CUDA_VISIBLE_DEVICES="0"
TORCH_CUDA_ARCH_LIST="7.5"  # For Tesla T4

# =============================================================================
# Security Configuration
# =============================================================================
# Security group (will be created by deployment scripts)
SECURITY_GROUP_ID=""
SECURITY_GROUP_NAME="rnnt-production-sg"

# SSH key file (will be created by deployment scripts)
SSH_KEY_FILE="./rnnt-production-key.pem"

# =============================================================================
# Optional Integration Settings
# =============================================================================
# For Lambda router integration (optional)
LAMBDA_FUNCTION_NAME="rnnt-transcription-router"
SQS_QUEUE_URL=""

# EventBridge integration (optional)
EVENT_BUS_NAME="rnnt-transcription-events"

# =============================================================================
# Monitoring and Logging
# =============================================================================
LOG_LEVEL="INFO"
HEALTH_CHECK_INTERVAL="30"
METRICS_ENABLED="true"

# =============================================================================
# Development/Testing Settings
# =============================================================================
# Set to "true" for development mode (uses smaller model)
DEV_MODE="false"

# Test audio file for validation
TEST_AUDIO_S3_PATH=""

# =============================================================================
# DO NOT EDIT BELOW - Auto-populated by scripts
# =============================================================================
DEPLOYMENT_TIMESTAMP=""
DEPLOYMENT_VERSION="1.0.0"
CONFIG_VALIDATION_PASSED=""